<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VideoDetail"
    >
  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/imageVideoDetailBg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:actualImageScaleType="centerCrop"
      app:backgroundImage="@color/gray_e5"
      app:fadeDuration="300"
      app:placeholderImage="@color/gray_e5"
      app:placeholderImageScaleType="centerCrop"
      />

  <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
      android:id="@+id/detailVideo"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_video_detail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/detailVideo"
      />
</RelativeLayout>