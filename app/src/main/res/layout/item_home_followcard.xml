<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    >

  <ImageView
      android:id="@+id/img_follow_card_img"
      android:layout_width="match_parent"
      android:layout_height="@dimen/horizontalScrollCard_height"
      android:src="@color/gray_e5"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/img_follow_card_img"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="@dimen/default_margin"
      android:layout_marginRight="@dimen/default_margin"
      android:background="@drawable/video_length_text_back"
      android:text="07:46"
      android:textColor="@color/white"
      android:textSize="12sp"
      />

  <ImageView
      android:id="@+id/img_follow_card_user_icon"
      android:layout_width="@dimen/img_category_icon_w_h"
      android:layout_height="@dimen/img_category_icon_w_h"
      android:layout_below="@+id/img_follow_card_img"
      android:layout_marginBottom="@dimen/default_margin"
      android:layout_marginTop="@dimen/default_margin"
      android:src="@color/gray_e5"
      />

  <TextView
      android:id="@+id/tv_follow_card_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/img_follow_card_img"
      android:layout_marginLeft="@dimen/default_margin"
      android:layout_marginTop="@dimen/default_margin"
      android:layout_toRightOf="@+id/img_follow_card_user_icon"
      android:maxLines="1"
      android:text="这里是视频标题"
      android:textColor="@color/black"
      android:textSize="16sp"
      />
  <TextView
      android:id="@+id/tv_follow_card_des"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/img_follow_card_user_icon"
      android:layout_marginLeft="@dimen/default_margin"
      android:layout_toRightOf="@+id/img_follow_card_user_icon"
      android:maxLines="1"
      android:text="这里是作者名和视频分类"
      android:textColor="@color/gray"
      android:textSize="14sp"
      />
</RelativeLayout>
