<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->
    <entity name="colorPrimary">@color/white</entity>
    <entity name="colorPrimaryDark">@color/white</entity>
    <entity name="colorAccent">@color/deepskyblue</entity>
    <entity name="windowNoTitle">true</entity>
    <entity name="android:windowLightStatusBar">true</entity>
    <entity name="android:colorBackground">@color/white</entity>
    <entity name="android:statusBarColor">@color/white</entity>
    <entity name="android:textColorPrimary">@color/black</entity>
    <entity name="android:textColorSecondary">@color/deepskyblue</entity>
    <entity name="android:navigationBarColor">@color/black</entity>
    <entity name="android:textColorSecondaryInverse">@color/black</entity>
    <entity name="android:windowBackground">@color/white</entity>
    <entity name="android:textColorPrimaryInverse">@color/black</entity>
    <entity name="android:colorForeground">@color/black</entity>
  </style>

  <!-- welcome theme. -->
  <style name="WelcomeTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->
    <entity name="windowNoTitle">true</entity>
    <entity name="android:windowFullscreen">true</entity>
  </style>

  <style name="nav_style">
    <entity name="android:layout_width">0dp</entity>
    <entity name="android:layout_height">wrap_content</entity>
    <entity name="android:layout_weight">1</entity>
    <entity name="android:button">@null</entity>
    <entity name="android:drawablePadding">2dp</entity>
    <entity name="android:gravity">center</entity>
    <entity name="android:textSize">11sp</entity>
  </style>

</resources>
